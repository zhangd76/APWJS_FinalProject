html
  head
    style 
      include styles.css
      
title 

main
  h1.title.main-title.container Choose Your Own Adventure

body.container.game-body
  nav.game-nav
    ul
        li.forest
        a(href="/TheEnchantedForest")       
           img(src="imgs/forest.jpg", id="The Enchanted Forest")
        li.desert
        a(href="/TheGalacticEngima")
           img(src="imgs/ge3.jpg", id="The Galactic Enigma")
        li.cave
        a(href="/TheManor")
            img(src="imgs/manor.jpg", id="The Manor")
  
  a.game-exit(href="/home") Back to Home


  script.
    var body = document.body;
    var title = document.querySelector(".title");

    var forestElement = document.getElementById("The Enchanted Forest");
    forestElement.addEventListener("mouseover", function() {
        body.style.backgroundImage = "url('imgs/forest.jpg')";
        title.style.color = "white";
        title.textContent = "The Enchanted Forest";
        title.classList.remove("color-change");
        title.classList.remove("pulse");
        title.classList.add("bounce"); 
    });

    var desertElement = document.getElementById("The Galactic Enigma");
    desertElement.addEventListener("mouseover", function() {
        body.style.backgroundImage = "url('imgs/ge3.jpg')";
        title.classList.remove("pulse");
        title.classList.remove("bounce");
        title.classList.add("color-change"); 
        title.textContent = "The Galactic Enigma";

    });

    var caveElement = document.getElementById("The Manor");
    caveElement.addEventListener("mouseover", function() {
        body.style.backgroundImage = "url('imgs/manor.jpg')";
        title.style.color = "black";
        title.textContent = "The Manor";
        title.classList.remove("color-change");
        title.classList.remove("bounce");
        title.classList.add("pulse"); 
    });
